{
  "manifest_version": 2,

  "name": "Braindead",
  "description": "A learning tool to turn a braindead into an expert!",
  "version": "1.0",

  "icons": {
    "16": "braindeadlogo.png",
    "48": "braindeadlogo.png",
    "32": "braindeadlogo.png"
  },

  "browser_action": {
    "default_icon": "braindeadlogo.png"
  },

  "background": {
    "scripts": ["main.js"],
    "persistent": false
  },

  "permissions": [
    "http://*/",
    "activeTab"
  ],

  "web_accessible_resources": ["templates/braindead_quiz_tab.html"]
}
